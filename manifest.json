{
  "manifest_version": 3,
  "name": "Personal Firewall Pro - Final",
  "version": "2.3.0",
  "description": "Keyword filtering, HTTPS-only, trust checks, and custom blocked page.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background_updated.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Personal Firewall Pro"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "base",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
